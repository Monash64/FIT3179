{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australian Crops by proportion of Value ($m)",
  "data": {"url": "https://raw.githubusercontent.com/Monash64/FIT3179/main/Crop_Value.csv"},
  "width": 400,
  "height": 300,
  "mark": "area",
  "encoding": {
    "x": {
      "timeUnit": "yearmonth",
      "field": "Year",
      "title": "Year",
      "axis": {"domain": [0,100], "format": "%Y"}
    },
    "y": {
      "aggregate": "sum",
      "field": "Industry_Value",
      "name":"$m",
      "axis": "$m",
    },
    "tooltip": [
            {"field": "Commodity", "type": "nominal", "title":"Commodity"},
      {"field": "sum_Industry_Value", "type": "quantitative", "title":"Industry value ($m)"},
      {"field": "Year", "type": "temporal"}
      ],
    "color": {"field": "Commodity", "scale": {"scheme": "category20b"}}
  }
}
