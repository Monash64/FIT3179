{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title":"Country Production",
  "description": "Country Production",
  "width": 400,
  "height": 300,
  "data": {"url": "https://raw.githubusercontent.com/Monash64/FIT3179/main/Top%20Wheat%20Producers.csv"},
  "encoding": {"color": {"field": "Country", "type": "nominal", "legend": null}},
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": {"field": "Year", "type": "temporal", "title": "Year"},
        "y": {"field": "Wheat", "type": "quantitative", "title": "Wheat (kt)"}
      }
    },
    {
      "encoding": {
        "x": {"aggregate": "max", 
              "field": "Year", 
              "type": "temporal"},
        "y": {
          "aggregate": {"argmax": "Year"},
          "field": "Wheat",
          "type": "quantitative"
        },
        
      },
      "layer": [
        {"mark": {"type": "circle", "size":75}},
        {
          "mark": {"type": "text", "align": "left", "dx": 5, "size":20},
          "encoding": {"text": {"field": "Country", "type": "nominal"}}
        }
      ]
      
    }
  ],
  "config": {"view": {"stroke": null}}
}
