{
  "width": 300,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/Monash64/FIT3179/main/Forecast.csv",
    "format": {"type": "csv"}
  },
  "mark": {"type": "line", "point": {
      "filled": false,
      "fill": "white"
    }},
  "encoding": {
        "x": {
          "timeUnit": {"unit": "year"},
          "field": "Year",
          "type": "temporal"
        },
    "y": {
      "aggregate": "sum",
      "field": "Change",
      "title": "% Change in Production"
    },
    "color": {"field": "Country"},
    "tooltip": [
      {"field": "Wheat", "type": "quantitative", "title": "Wheat (Mt)"},
      {
        "field": "Change",
        "type": "quantitative",
        "title": "% Change in Production"
      },
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Year", "type":"Temporal", "title": "Year"}
    ]
  },
  "config": {}
}
