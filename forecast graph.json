{
  "width": 300,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/Monash64/FIT3179/main/Forecast.csv",
    "format": {"type": "csv"}
  },
  "mark": {"type": "line", "tooltip":true, "point": {
      "filled": false,
      "fill": "white"
    }},
  "encoding": {
        "x": {
          "timeUnit": {"unit": "year"},
          "field": "Year",
          "type": "temporal",
          "title":"Year"
        },
    "y": {
      "aggregate": "sum",
      "field": "Change",
      "title": "% Change in Production"
    },
    "color": {"field": "Country", 
              "title":"Country/Region",
              "type":"ordinal",
              "scale": {"range": ["red", "green", "orange", "black","lightblue", "blue"]}}
  },
  "config": {}
}
