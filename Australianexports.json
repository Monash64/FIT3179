{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australian Wheat Exports",
  "width": 800,
  "height": 800,
  "projection": {"type": "azimuthalEqualArea", "rotate":[-90]},
  "params": [
    {
      "name": "Year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1991,
        "max": 2020,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Monash64/FIT3179/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Monash64/FIT3179/main/Australian_Exports.csv"
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Monash64/FIT3179/main/ne_110m.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Export_Total",
          "type": "quantitative",
          "scale": {
            "domain": [0, 1, 1000, 2000, 3000, 4000],
            "range": ["lightgrey", "#fde725", "#5ec962", "#21918c", "#3b528b", "#440154"]
          },
          "title": "Volume Exported (kt)"
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {
            "field": "Export_Total",
            "type": "ordinal",
            "title": "Total Exported"
          }
        ]
      }
    }
  ],
  "config": {}
}
