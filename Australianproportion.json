{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australian Crops by proportion of Value",
  "data": {"url": "https://raw.githubusercontent.com/Monash64/FIT3179/main/Crop_Value.csv"},
  "width": 350,
  "height": 300,
  "mark": "area",
  "encoding": {
    "x": {
      "timeUnit": "yearmonth",
      "field": "Year",
      "title": "Year",
      "axis": {"format": "%Y"}
    },
    "y": {
      "aggregate": "sum",
      "field": "Industry_Value",
      "title":"% of Cropping Industry value",
      "stack":"normalize"
    },
    "tooltip": [
      {"field": "Commodity", "type": "nominal", "title":"Commodity"},
      {"field": "sum_Industry_Value", "type": "quantitative", "title":"Proportion of total crop value"},
      {"field": "Year", "type": "temporal"}
      ],
    "color": {"field": "Commodity", "scale": {"scheme": "category20b"}}
  }
}
